<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="144.0"
            prefWidth="529.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.bigtows.forms.controllers.LoginController">
    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="580.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="user" alignment="TOP_CENTER" prefHeight="27.0" prefWidth="133.0"
                           promptText="Имя пользователя" text="root"/>
                <PasswordField fx:id="password" alignment="TOP_CENTER" prefHeight="27.0" prefWidth="133.0"
                               promptText="Пароль"/>
                <Button fx:id="login" mnemonicParsing="false" onMouseClicked="#onClickLogin" prefHeight="27.0"
                        prefWidth="100.0" text="Войти"/>
            </children>
            <BorderPane.margin>
                <Insets left="10.0" right="10.0"/>
            </BorderPane.margin>
            <opaqueInsets>
                <Insets right="10.0"/>
            </opaqueInsets>
        </HBox>
    </bottom>
    <left>
        <TextField fx:id="host" prefHeight="27.0" prefWidth="133.0" promptText="Имя хоста" text="localhost"
                   BorderPane.alignment="CENTER">
            <padding>
                <Insets left="10.0"/>
            </padding>
            <BorderPane.margin>
                <Insets left="10.0"/>
            </BorderPane.margin>
        </TextField>
    </left>
</BorderPane>
